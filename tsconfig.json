{
  "extends": "./node_modules/@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "rootDir": "src",
    "removeComments": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "noEmit": true,
    "types": ["node", "vitest/globals"],
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts"]
}
